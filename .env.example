# Database Connection
DATABASE_URL="postgresql://user:password@localhost:5432/bloodpressure"

# Backend Configuration
PORT=3000

# Firebase Admin SDK Service Account (Single line JSON string)
# Go to Project Settings > Service accounts > Generate new private key
FIREBASE_ACCOUNT={"type": "service_account", "project_id": "...", ...}

# Frontend Configuration (Vite)
VITE_API_URL=http://localhost:3000/api

# Firebase Cloud Messaging VAPID Key
# Go to Project Settings > Cloud Messaging > Web configuration > Generate key pair
VITE_VAPID_KEY=your_vapid_key_here

# Firebase Client SDK Configuration (Single line JSON string)
# Go to Project Settings > General > Your apps > SDK setup and configuration (Config)
VITE_FIREBASE_INIT={"apiKey": "...", "authDomain": "...", ...}
