{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",           // 改為 commonjs
    "moduleResolution": "node",     // 改為 node
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}